<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appback_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/skybluebg"
    tools:context=".BookAppointmentActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="14dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:id="@+id/textViewAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/personname"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:hint="Name"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_security_24"
                android:drawablePadding="8dp"
                android:hint="Address"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/contact"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Contact No"
                android:drawableLeft="@drawable/baseline_contact_phone_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/fees"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Fees"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:text="Select Date"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="497dp" />

            <Button
                android:id="@+id/buttondate"
                style="?android:spinnerStyle"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="27/02/23"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="525dp" />

            <TextView
                android:layout_width="86dp"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="130dp"
                android:text="Select time"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="497dp" />

            <Button
                android:id="@+id/buttontime"
                style="?android:spinnerStyle"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:text="7:00"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="525dp" />

            <Button
                android:id="@+id/buttonbook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/black"
                android:text="Book"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Back"
                android:id="@+id/buttonBack"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:backgroundTint="@color/black"
                app:cornerRadius = "20dp"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>